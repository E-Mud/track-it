$tagHoleWidth = 0.6rem
$tagHoleHeight = $tagHoleWidth

.tag
  background: $primaryLighter
  border-top-left-radius: $base
  border-bottom-left-radius: $base
  border-top-right-radius: ($base/4)
  border-bottom-right-radius: ($base/4)
  whiteframe(1)
  color: $white
  display: inline-block
  height: 1.6rem
  line-height: 1.6rem
  padding: 0 $base 0 ($base + $tagHoleWidth)
  position: relative
  text-decoration: none

  .close
    display: none

  &::before
    background: $white
    border-radius: 50%
    box-shadow: inset 0 1px rgba(0, 0, 0, 0.25)
    content: ''
    height: $tagHoleHeight
    left: ($base / 2)
    position: absolute
    width: $tagHoleWidth
    top: 5px

  &.closeable
    cursor: pointer

    &:hover
      .close
        display: initial
        position: absolute;
        top: 1px;
        left: 4px;

      &::before
        display: none
